<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lwm.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.net.conn.CONNECTIVITY_CHANGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".App">

        <service android:name=".service.MusicService" />
        <service android:name=".service.MusicServerService" />

        <activity
            android:name=".activity.BroadcastActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <action android:name="com.lwm.player.action.PLAY_SONG" />
                <action android:name="com.lwm.player.action.PAUSE_SONG" />
                <action android:name="com.lwm.player.action.UNPAUSE_SONG" />
                <action android:name="com.lwm.player.action.NEXT_SONG" />
                <action android:name="com.lwm.player.action.PREV_SONG" />
                <action android:name="com.lwm.player.action.SONG_SEEK_TO" />

                <action android:name="com.lwm.player.action.PLAY_STREAM" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.PlaybackActivity" />

        <activity
            android:name=".activity.ListenActivity" />

    </application>

</manifest>
