<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lwm.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.net.conn.CONNECTIVITY_CHANGE" />

    <application
        android:name="com.lwm.app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <receiver android:name=".receiver.MediaButtonIntentReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.NotificationIntentReceiver" >
            <intent-filter android:priority="0" >
                <action android:name="com.lwm.app.notification.now_playing.SHOW" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.PendingIntentReceiver" >
            <intent-filter>
                <action android:name="com.lwm.app.player.close" />
                <action android:name="com.lwm.app.player.play_pause" />
                <action android:name="com.lwm.app.player.next" />
                <action android:name="com.lwm.app.player.prev" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.lwm.app.service.MusicService" />

        <service
            android:name="com.lwm.app.service.MusicServerService" />

        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.MainActivity"
            android:theme="@style/StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.LocalSongChooserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.lwm.player.action.PLAY_SONG" />
                <action android:name="com.lwm.player.action.PAUSE_SONG" />
                <action android:name="com.lwm.player.action.UNPAUSE_SONG" />
                <action android:name="com.lwm.player.action.NEXT_SONG" />
                <action android:name="com.lwm.player.action.PREV_SONG" />
                <action android:name="com.lwm.player.action.SONG_SEEK_TO" />
                <action android:name="com.lwm.player.action.PLAY_STREAM" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.LocalPlaybackActivity"
            android:parentActivityName=".ui.activity.LocalSongChooserActivity"
            android:theme="@style/PlaybackActivityStyle" >

            <intent-filter android:priority="1" >
                <action android:name="com.lwm.app.notification.now_playing.SHOW" />
            </intent-filter>

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lwm.app.ui.activity.LocalSongChooserActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.RemotePlaybackActivity"
            android:parentActivityName="com.lwm.app.ui.activity.StationChooserActivity"
            android:theme="@style/PlaybackActivityStyle" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lwm.app.ui.activity.StationChooserActivity" />
        </activity>

        <activity android:name="com.lwm.app.ui.activity.PreferenceActivity" />

        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.StationChooserActivity"
            android:parentActivityName="com.lwm.app.ui.activity.MainActivity"
            android:label="@string/title_activity_station_chooser" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lwm.app.ui.activity.MainActivity" />

        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.AlbumInfoActivity"
            android:theme="@style/AppTheme.TranslucentActionBar"
            android:parentActivityName="com.lwm.app.ui.activity.LocalSongChooserActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lwm.app.ui.activity.LocalSongChooserActivity" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.lwm.app.ui.activity.ArtistInfoActivity"
            android:parentActivityName="com.lwm.app.ui.activity.LocalSongChooserActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lwm.app.ui.activity.LocalSongChooserActivity" />
        </activity>

    </application>

</manifest>
