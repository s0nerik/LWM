<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:background="@color/md_grey_800"
    android:minHeight="72dp"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <View
        android:background="@drawable/shadow_top_to_bottom"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="72dp"
        android:layout_toLeftOf="@+id/btnMenu"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:textColor="#000"
            android:maxLines="2"
            tools:text="Asking Alexandria"
            fontPath="@string/FONT_ROBOTO_REGULAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subtitle"
            android:textColor="#666"
            tools:text="8 albums, 112 songs"
            fontPath="@string/FONT_ROBOTO_REGULAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="#fff"
        android:src="@drawable/ic_more_vert_grey600_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</RelativeLayout>