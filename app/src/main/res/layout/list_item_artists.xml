<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.NonCheckable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.lwm.app.ui.custom_view.CheckedLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/artists_list_item_artist"
            android:checkMark="@null"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/songs_list_item_title_inactive"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            tools:text="Test"
            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/artists_list_item_albums_count"
            android:checkMark="@null"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/songs_list_item_artist_inactive"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:layout_height="0dp"
            tools:text="Test"
            fontify:font="@string/FONT_ROBOTO_THIN" />

    </com.lwm.app.ui.custom_view.CheckedLinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/now_playing_indicator"-->
        <!--android:src="@drawable/ic_action_play"-->
        <!--android:visibility="gone" />-->

</com.lwm.app.ui.custom_view.CheckedLinearLayout>