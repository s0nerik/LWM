<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/album_info_header_overlay_bg"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="74dp"
    android:orientation="vertical">

    <com.danh32.fontify.TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="From death to destiny of them samsara"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        fontify:font="@string/FONT_ROBOTO_BOLD" />

    <com.danh32.fontify.TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Asking Alexandria"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        fontify:font="@string/FONT_ROBOTO_REGULAR" />

    <com.danh32.fontify.TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aa111111"
        android:textSize="14sp"
        tools:text="2013"
        fontify:font="@string/FONT_ROBOTO_LIGHT" />

