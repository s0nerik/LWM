<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/album_info_header_overlay_bg"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="74dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="From death to destiny of them samsara"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        fontPath="@string/FONT_ROBOTO_BOLD" >
        <requestFocus />
    </TextView>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Asking Alexandria"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        fontPath="@string/FONT_ROBOTO_REGULAR" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aa111111"
        android:textSize="14sp"
        tools:text="2013"
        fontPath="@string/FONT_ROBOTO_LIGHT" />

    <!--<TextView-->
        <!--android:id="@+id/songs_count"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#aa111111"-->
        <!--tools:text="16 songs"-->
        fontPath="@string/FONT_ROBOTO_BOLD" />-->

</LinearLayout>