<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_main_activity">

    <LinearLayout
        android:id="@+id/start_screen_local_music_button"
        style="@style/StartScreenRoundButton"
        android:onClick="onPlayerTypeChosen"

        android:orientation="vertical"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp">

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/start_screen_local_music_button_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:svg="icons/local_music.svg"
            />

        <com.danh32.fontify.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local_music"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            app:font="@string/FONT_ROBOTO_BOLD" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_screen_remote_music_button"
        style="@style/StartScreenRoundButton"
        android:onClick="onPlayerTypeChosen"


        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true">

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/start_screen_remote_music_button_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:svg="icons/radio.svg"
            />

        <com.danh32.fontify.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remote_music"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            app:font="@string/FONT_ROBOTO_BOLD" />
    </LinearLayout>

</RelativeLayout>