        android:layout_weight="1"
        android:orientation="vertical" >

        <com.lwm.app.custom_view.CheckedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.lwm.app.custom_view.CheckedTextView
                android:id="@+id/songs_list_item_title"
                android:checkMark="@null"
                android:padding="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_weight="1"

                android:singleLine="true"

                android:textColor="@color/selector_songs_list_item_title"

                pixlui:typeface="Roboto-Regular.ttf" />

            <com.lwm.app.custom_view.CheckedTextView
                android:id="@+id/songs_list_item_duration"
                android:checkMark="@null"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="3:00"
                android:gravity="center_vertical"

                android:textColor="@color/selector_songs_list_item_artist"

                pixlui:typeface="Roboto-Thin.ttf" />

        </com.lwm.app.custom_view.CheckedLinearLayout>

        <com.lwm.app.custom_view.CheckedTextView
            android:id="@+id/songs_list_item_artist"
            android:checkMark="@null"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"

            android:textColor="@color/selector_songs_list_item_artist"

            android:gravity="start"
            android:layout_height="0dp"

            pixlui:typeface="Roboto-Thin.ttf" />

    </com.lwm.app.custom_view.CheckedLinearLayout>

