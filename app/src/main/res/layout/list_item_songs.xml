    <com.lwm.app.ui.custom_view.CheckedRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/SongItem"
        android:orientation="horizontal" >

        <com.lwm.app.ui.custom_view.CheckedLinearLayout
            android:id="@+id/upper_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.lwm.app.ui.custom_view.CheckedTextView
                style="@style/ListItemText.Title"
                android:id="@+id/songs_list_item_title"
                android:layout_width="0dp"
                android:layout_weight="1"

                tools:text="Song" />

            <com.lwm.app.ui.custom_view.CheckedTextView
                style="@style/ListItemText.Subtitle"
                android:id="@+id/songs_list_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="3:00"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"

                android:textColor="@color/selector_songs_list_item_artist" />

        </com.lwm.app.ui.custom_view.CheckedLinearLayout>

        <com.lwm.app.ui.custom_view.CheckedTextView
            style="@style/ListItemText.Subtitle"
            android:id="@+id/songs_list_item_artist"
            android:layout_below="@+id/upper_line"

            tools:text="Artist"/>

        <ImageView
            android:id="@+id/button_context_menu"
            android:paddingLeft="20dp"
            android:paddingBottom="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/songs_list_item_artist"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#888"
            android:src="@drawable/ic_core_overflow" />

    </com.lwm.app.ui.custom_view.CheckedRelativeLayout>
