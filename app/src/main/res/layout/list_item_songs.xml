<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.CheckedRelativeLayout
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.lwm.app.ui.custom_view.CheckedLinearLayout
        android:id="@+id/upper_line"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/songs_list_item_title"
            android:checkMark="@null"
            android:padding="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_weight="1"

            android:singleLine="true"

            android:textColor="@color/selector_songs_list_item_title"
            tools:text="Song"
            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/songs_list_item_duration"
            android:checkMark="@null"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="3:00"
            android:gravity="center_vertical"

            android:textColor="@color/selector_songs_list_item_artist"

            fontify:font="@string/FONT_ROBOTO_THIN" />

    </com.lwm.app.ui.custom_view.CheckedLinearLayout>

    <com.lwm.app.ui.custom_view.CheckedTextView
        android:id="@+id/songs_list_item_artist"
        android:checkMark="@null"
        android:paddingLeft="6dp"
        android:paddingBottom="6dp"

        android:layout_below="@+id/upper_line"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"

        android:textColor="@color/selector_songs_list_item_artist"
        tools:text="Artist"

        fontify:font="@string/FONT_ROBOTO_THIN" />

    <ImageView
        android:id="@+id/button_context_menu"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:paddingRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/songs_list_item_artist"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="#888"
        android:src="@drawable/ic_core_overflow" />

</com.lwm.app.ui.custom_view.CheckedRelativeLayout>