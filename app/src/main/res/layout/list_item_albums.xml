<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.custom_view.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/albums_list_item_cover"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/albums_list_item_album"
            android:checkMark="@null"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"

            pixlui:typeface="Roboto-Regular.ttf"

            android:gravity="center_vertical" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/albums_list_item_artist"
            android:checkMark="@null"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#666666"

            pixlui:typeface="Roboto-Thin.ttf"

            android:gravity="start"
            android:layout_height="0dp" />

    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/now_playing_indicator"-->
        <!--android:src="@drawable/ic_action_play"-->
        <!--android:visibility="gone" />-->

</com.lwm.app.custom_view.CheckedLinearLayout>