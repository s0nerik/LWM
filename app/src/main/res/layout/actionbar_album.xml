<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.danh32.fontify.TextView
            style="@style/SongTitle"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/actionbar_primary_text_size"
            android:textColor="#ffffff"

            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"

            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <com.danh32.fontify.TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:ellipsize="end"
            android:text=""
            android:textSize="@dimen/actionbar_secondary_text_size"
            android:textColor="#eeeeee"

            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"

            fontify:font="@string/FONT_ROBOTO_LIGHT" />
    </LinearLayout>

</RelativeLayout>