<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="60dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.lwm.app.ui.custom_view.CheckedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/songs_list_item_title"
            android:checkMark="@null"
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_weight="1"

            android:singleLine="true"

            android:textColor="@color/selector_songs_list_item_title"

            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <com.lwm.app.ui.custom_view.CheckedTextView
            android:id="@+id/songs_list_item_duration"
            android:checkMark="@null"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="3:00"
            android:gravity="center_vertical"

            android:textColor="@color/selector_songs_list_item_artist"

            fontify:font="@string/FONT_ROBOTO_THIN" />

    </com.lwm.app.ui.custom_view.CheckedLinearLayout>

</com.lwm.app.ui.custom_view.CheckedLinearLayout>