<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:minHeight="56dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="56dp"
    android:background="@drawable/selector_simple_songs_list_item_bg"
    android:orientation="horizontal" >

    <ImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/now_playing_icon"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_av_pause"
        android:tint="@android:color/white"
        tools:tint="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.lwm.app.ui.custom_view.CheckedTextView
        android:id="@+id/title"
        android:checkMark="@null"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        tools:text="Title title title title"
        android:singleLine="true"

        android:textColor="#000000"
        fontify:font="@string/FONT_ROBOTO_REGULAR" />

    <com.lwm.app.ui.custom_view.CheckedTextView
        android:id="@+id/duration"
        android:checkMark="@null"
        android:padding="6dp"
        android:layout_marginRight="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        tools:text="3:00"
        android:gravity="center_vertical"

        android:textColor="@color/selector_simple_songs_list_item_duration_color"

        fontify:font="@string/FONT_ROBOTO_THIN" />

    <ImageView
        android:id="@+id/contextMenu"
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tint="#888"
        android:src="@drawable/ic_core_overflow" />

</com.lwm.app.ui.custom_view.CheckedLinearLayout>