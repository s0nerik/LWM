<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.CheckedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="60dp"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_simple_songs_list_item_bg"
    android:orientation="horizontal" >

    <!--android:visibility="gone"-->

    <com.lwm.app.ui.custom_view.CheckedImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/now_playing_icon"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play_hover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.lwm.app.ui.custom_view.CheckedTextView
        android:id="@+id/songs_list_item_title"
        android:checkMark="@null"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_weight="1"

        android:singleLine="true"

        android:textColor="#000000"
        fontify:font="@string/FONT_ROBOTO_REGULAR" />

    <com.lwm.app.ui.custom_view.CheckedTextView
        android:id="@+id/songs_list_item_duration"
        android:checkMark="@null"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:text="3:00"
        android:gravity="center_vertical"

        android:textColor="@color/selector_simple_songs_list_item_duration_color"

        fontify:font="@string/FONT_ROBOTO_THIN" />

</com.lwm.app.ui.custom_view.CheckedLinearLayout>