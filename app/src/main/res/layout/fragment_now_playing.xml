<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="match_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        tools:src="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/now_playing_layout"
        android:scaleType="centerCrop"
        android:id="@+id/cover" />

    <RelativeLayout
        android:id="@+id/now_playing_layout"
        android:background="@drawable/shadow_playback_fragment_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:background="#88000000"
                android:id="@+id/shadow"
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Now playing"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/SongTitle"
                tools:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"

                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                fontPath="@string/FONT_ROBOTO_REGULAR" />

            <TextView
                tools:text="Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artist"

                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="8dp"

                fontPath="@string/FONT_ROBOTO_LIGHT" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>