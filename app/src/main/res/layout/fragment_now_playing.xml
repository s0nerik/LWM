<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="match_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/mainGroup"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@color/md_black"
            tools:src="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/layout"
            android:layout_alignBottom="@+id/layout"
            android:scaleType="centerCrop"
            android:id="@+id/cover" />

        <LinearLayout
            android:id="@+id/layout"
            android:background="@drawable/shadow_playback_fragment_bottom"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:background="#88000000"
                android:id="@+id/shadow"
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Now playing"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/SongTitle"
                tools:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"

                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                fontPath="@string/FONT_ROBOTO_REGULAR" />

            <TextView
                tools:text="Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artist"

                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="8dp"

                fontPath="@string/FONT_ROBOTO_LIGHT" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fabGroup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <app.ui.custom_view.RadialEqualizerView
            android:id="@+id/radialEqualizerView"
            android:layout_width="80dp"
            android:layout_height="80dp"

            app:rew_color="@color/md_orange_a700"
            app:rew_bars_count="15"
            app:rew_min_scale="70"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/playbackFab"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_pause_24dp"
            android:tint="@android:color/white"
            android:layout_gravity="center"

            app:fabSize="normal"
            app:elevation="4dp"
            app:backgroundTint="?attr/colorPrimary"

            android:clickable="true"/>

    </FrameLayout>

</RelativeLayout>