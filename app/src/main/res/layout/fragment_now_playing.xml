<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:orientation="vertical" >

    <View
        android:background="@drawable/horizontal_shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#0F0A06"
        android:id="@+id/fragment_now_playing"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:id="@+id/now_playing_cover" />

        <LinearLayout
            android:id="@+id/now_playing_bar_layout"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <com.danh32.fontify.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:text="@string/now_playing_bar_header"
                android:textColor="#ffcccccc"

                fontify:font="@string/FONT_ROBOTO_THIN_ITALIC" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff555555"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.danh32.fontify.TextView
                    style="@style/SongTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/now_playing_bar_title"

                    android:textSize="20sp"
                    android:textColor="#FFFFFF"

                    fontify:font="@string/FONT_ROBOTO_REGULAR" />

                <com.danh32.fontify.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/now_playing_bar_artist"

                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="#cccccc"

                    fontify:font="@string/FONT_ROBOTO_THIN" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center"

            android:id="@+id/now_playing_bar_play_pause_button"

            android:src="@drawable/ic_pause" />

    </LinearLayout>
</LinearLayout>