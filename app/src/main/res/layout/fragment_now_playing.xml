<?xml version="1.0" encoding="utf-8"?>

<com.lwm.app.ui.custom_view.SlidingLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp"
    android:orientation="vertical" >

    <View
        android:background="@drawable/horizontal_shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_bar_height"
        android:background="#0F0A06"
        android:id="@+id/global_layout" >

        <ImageView
            android:layout_width="@dimen/now_playing_bar_height"
            android:layout_height="@dimen/now_playing_bar_height"
            android:scaleType="centerCrop"
            android:id="@+id/cover" />

        <SeekBar
            android:id="@+id/seek_bar"
            style="@style/SeekBarNowPlaying"
            android:max="100"
            android:progress="1"
            android:layout_toRightOf="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_toRightOf="@+id/cover"
            android:layout_toLeftOf="@+id/btn_play_pause"
            android:paddingLeft="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.danh32.fontify.TextView
                style="@style/SongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"

                android:textSize="20sp"
                android:textColor="#FFFFFF"

                fontify:font="@string/FONT_ROBOTO_REGULAR" />

            <com.danh32.fontify.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artist"

                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="#cccccc"

                fontify:font="@string/FONT_ROBOTO_THIN" />

        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"

            android:id="@+id/btn_play_pause"

            android:src="@drawable/ic_pause" />

    </RelativeLayout>
</com.lwm.app.ui.custom_view.SlidingLinearLayout>