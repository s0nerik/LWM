<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_playback_layout" >

        <ImageView
            android:id="@+id/fragment_playback_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:x="0dp"
            android:y="0dp"
            android:src="@android:color/black" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_playback_seekBar">
            <ImageView
                android:layout_width="@dimen/albumart_size"
                android:layout_height="@dimen/albumart_size"
                android:scaleType="centerCrop"
                android:id="@+id/fragment_playback_cover"
                android:layout_gravity="center" />
        </FrameLayout>

        <com.danh32.fontify.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_playback_now_position"
            android:text="0:00"
            android:gravity="center"
            android:padding="3dp"

            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"

            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_above="@+id/fragment_playback_seekBar"
            android:layout_alignParentLeft="true"

            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_seekbar"
            android:id="@+id/fragment_playback_seekBar"
            style="@style/SeekBar"
            tools:progress="50"
            android:layout_above="@+id/fragment_playback_controls" />

        <com.danh32.fontify.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_playback_last_position"
            android:text="3:00"
            android:gravity="center"
            android:padding="3dp"

            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"

            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_above="@+id/fragment_playback_seekBar"
            android:layout_alignParentRight="true"

            fontify:font="@string/FONT_ROBOTO_REGULAR" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_playback_controls"
            android:background="#55000000"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shuffle_active"
                android:layout_weight="1"
                android:id="@+id/fragment_playback_shuffle_button"
                android:onClick="onControlButtonClicked"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prev"
                android:layout_weight="1"
                android:id="@+id/fragment_playback_prev"
                android:onClick="onControlButtonClicked"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause"
                android:layout_weight="1"
                android:id="@+id/fragment_playback_play_pause"
                android:onClick="onControlButtonClicked"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:layout_weight="1"
                android:id="@+id/fragment_playback_next"
                android:onClick="onControlButtonClicked"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_repeat"
                android:layout_weight="1"
                android:id="@+id/fragment_playback_repeat_button"
                android:onClick="onControlButtonClicked"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        tools:visibility="visible"
        android:id="@+id/waiting_for_station"
        android:visibility="gone"
        android:drawableTop="@drawable/ic_alerts_and_states_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/waiting_for_server"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:textColor="#ffffff" />

</FrameLayout>