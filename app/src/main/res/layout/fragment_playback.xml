<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@android:color/black"
        android:x="0dp"
        android:y="0dp" />

    <View
        android:background="@drawable/shadow_playback_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <View
        android:background="@drawable/shadow_playback_fragment_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <FrameLayout
        android:id="@+id/albumArtLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottomBar">

        <com.lwm.app.ui.custom_view.SquareWidthImageView
            android:background="@drawable/abc_popup_background_mtrl_mult"
            android:src="@drawable/no_cover"
            android:id="@+id/cover"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="5dp"
        android:gravity="center"
        android:padding="3dp"
        android:shadowColor="#000000"

        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:text="0:00"
        android:textColor="@android:color/white"

        fontPath="@string/FONT_ROBOTO_REGULAR" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="3dp"
        android:shadowColor="#000000"

        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:text="3:00"
        android:textColor="@android:color/white"

        fontPath="@string/FONT_ROBOTO_REGULAR" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:progress="50" />

        <include layout="@layout/part_playback_control_buttons" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:visibility="gone"
        tools:visibility="visible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:theme="@style/PlaybackFragmentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>