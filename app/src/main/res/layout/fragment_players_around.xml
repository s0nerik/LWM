<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwm.app.ui.activity.LocalMusicActivity$PlayersAroundFragment">

    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:orientation="vertical"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@android:color/white"
            app:pstsIndicatorHeight="2dp"
            app:pstsShouldExpand="true"
            app:pstsUnderlineColor="@android:color/transparent"
            app:pstsIndicatorColor="@android:color/white" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/toolbarLayout"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_below="@+id/toolbarLayout"
        android:background="@drawable/header_overlay_shadow_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-28dp"
        android:layout_below="@+id/toolbarLayout"

        android:visibility="gone"

        app:fab_colorNormal="?attr/colorPrimaryDark"
        app:fab_colorPressed="@color/primary"
        />

</RelativeLayout>