<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    tools:background="@android:color/black" >

    <ImageView
        android:id="@+id/album_art"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_toRightOf="@id/album_art"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_close">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="NOW PLAYING" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:background="@drawable/selector_notification_button_bg"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_notification_close" />

    <LinearLayout
        android:id="@+id/song_info"
        android:layout_toRightOf="@id/album_art"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_toLeftOf="@+id/btn_close">

        <TextView
            style="@style/NotificationTitle"
            android:id="@+id/title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="18sp"
            android:text="Test"
            android:focusable="true"
            android:focusableInTouchMode="true" >
            <requestFocus/>
        </TextView>

        <TextView
            style="@style/NotificationText"
            android:id="@+id/artist"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:text="Test" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/separator_info_buttons"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:background="#222"
        android:layout_toRightOf="@+id/album_art"
        android:layout_above="@+id/buttons" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_toRightOf="@+id/album_art"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_prev"
            android:background="@drawable/selector_notification_button_bg"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_prev" />

        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#222" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:background="@drawable/selector_notification_button_bg"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_pause" />

        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#222" />

        <ImageButton
            android:id="@+id/btn_next"
            android:background="@drawable/selector_notification_button_bg"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_next" />

    </LinearLayout>

</RelativeLayout>