<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
            android:dither="true">

            <corners android:radius="1dp"/>

            <solid android:color="@color/card_shadow" />

        </shape>
    </item>

    <item android:bottom="1dp"
        android:right="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <solid android:color="#c3c3c3" />

        </shape>
    </item>

    <item android:bottom="2dp"
        android:right="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <solid android:color="@color/card_checked_inner_shadow" />

        </shape>
    </item>

    <item android:bottom="2dp"
        android:right="2dp"
        android:left="2dp"
        android:top="3dp">

        <shape android:shape="rectangle"
            android:dither="true">

            <solid android:color="@color/card_checked" />

        </shape>
    </item>
</layer-list>